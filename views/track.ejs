      </datalist>
      <!-- <form class="add-btn-track" action="/track" method="POST"> -->
      <button type="submit" value="" class="addButton">+</button>
  </form>
  </div>

  <div class="coinRender">

    <div class="individualCoin">
      <%Coins.forEach((coin)=>{%>
        <button>
          <a style="text-decoration: none; color:red" ; href=<%=coin%> >
            <%=coin%>
